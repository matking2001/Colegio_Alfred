<div class="row">
    <div class="col-md-5 mt-5 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="box">
            <%= simple_form_for(@user) do |f| %> 
            <%= f.input :identificacion %>
            <div class="row">
              <div class="col"><%= f.input :primer_nombre %></div>
              <div class="col"><%= f.input :segundo_nombre %></div>
            </div>
  
            <div class="row">
              <div class="col"><%= f.input :primer_apellido %></div>
              <div class="col"><%= f.input :segundo_apellido %></div>
            </div>

            <%= f.input :fecha_nacimiento %>
        
            <div class="row">
              <div class="col"><%= f.input :telefono %></div>
              <div class="col"><%= f.input :email %></div>
              <div class="col"><%= f.input :password %></div>
            </div>
  
            <%= f.input :sexo, as: :radio_buttons, collection: ['Masculino', 'Femenino'] %>
            
            <div class="row">
              <div class="col"><%= f.input :direccion %></div>
            </div>
  
            <div class="row">
              <div class="col">
                <div class="d-flex justify-content-center">
                  <%= f.button :submit, class: "btn-primary btn-block" %>
                </div>
              </div>
  
              <div class="col">
                <div class="d-flex justify-content-center">
                  <%= link_to 'Regresar' , users_path, class: "btn
                  btn-warning btn-block" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>